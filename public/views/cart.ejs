<%- include('.././partials/header'); %>
  <div id="cartList" class="container" style="background-color: rgb(28, 179, 179);"></div>
  <script>
    var cartList = JSON.parse(window.localStorage.getItem("cart") || "[]");
    var items = "";
    if (cartList.length > 0) {
      for (var i = 0; i < cartList.length; i++) {
        items = items.concat(
          `<br>
            <div class="card"  style="background-color: rgb(28, 179, 179);>
            <div class="card-body">
              <h1 class="card-title"> Name : ${cartList[i].name}</h1>
              <h3 class="card-subtitle"> Price : ${cartList[i].price} </h3>
              <h3 class="card-text"> Amount in cart : ${cartList[i].cartCount} </h3>
              <a class="card-link" href="http://localhost:8000/product/${cartList[i]._id}"> Details </a>
            </div>
        </div>`
        );
      }
      console.log("items retrieved");
      console.log(items);
      document.getElementById("cartList").innerHTML = items;
    } else {
      console.log("items not found");
      document.getElementById("cartList").innerHTML =
        '<h1 class="display-1"> Empty Cart </h1>';
    }
  </script>
  <%- include('.././partials/footer'); %>